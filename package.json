{
    "name": "open-backend-1.2",
    "version": "1.0.0",
    "description": "",
    "keywords": [],
    "author": "Wishva Chandrasekara",
    "license": "ISC",
    "main": "./src/api/index.ts",
    "type": "commonjs",
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "contributors": [
        {
            "name": "Wishva Kalhara",
            "url": "https://github.com/vishva-kalhara"
        }
    ],
    "include": [
        "src/api/**/*",
        "src/api/types/express.d.ts"
    ],
    "scripts": {
        "start": "cd ./src && cd ./api && npx cross-env NODE_ENV=development nodemon index.ts",
        "start:prod": "cd ./src && cd ./api && npx cross-env NODE_ENV=production nodemon index.ts",
        "debug": "cd ./src && cd ./api && ndb index.ts",
        "test": "jest --verbose --runInBand --detectOpenHandles",
        "test:units": "jest --testPathPattern=src/__tests__/units --verbose --runInBand --detectOpenHandles",
        "test:integrations": "jest --testPathPattern=src/__tests__/integrations --verbose --runInBand --detectOpenHandles",
        "test:integrations:auth": "jest --testPathPattern=src/__tests__/integrations/authHandler.test.ts --verbose --runInBand --detectOpenHandles",
        "build": "tsc --build"
    },
    "dependencies": {
        "bcrypt": "^5.0.1",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^7.2.0",
        "global": "^4.4.0",
        "helmet": "^7.1.0",
        "hpp": "^0.2.3",
        "html-to-text": "^5.1.1",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.4.0",
        "morgan": "^1.10.0",
        "nodemailer": "^6.9.14",
        "pug": "^3.0.3",
        "slugify": "^1.6.6",
        "tsx": "^4.10.5",
        "validator": "^13.12.0",
        "xss-clean": "^0.1.4"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/mongoose": "^5.11.97",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.12.12",
        "@types/nodemailer": "^6.4.15",
        "@types/pug": "^2.0.10",
        "@types/supertest": "^6.0.2",
        "@types/validator": "^13.11.10",
        "jest": "^29.7.0",
        "nodemon": "^3.1.0",
        "supertest": "^7.0.0",
        "ts-jest": "^29.1.3",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "3.9.0",
        "tsx": "^4.10.5",
        "types": "^0.1.1",
        "typescript": "^5.4.5"
    }
}
